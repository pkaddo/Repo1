<Window x:Class="SimpleCalc.CS.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    Title="SimpleCalc - CS - WPF" Height="98" Width="562" Loaded="Window_Loaded">
  <Grid>
    <TextBox x:Name="Number1TextBox" HorizontalAlignment="Left" Height="36" Margin="10,10,0,0" TextWrapping="Wrap" Text="10" VerticalAlignment="Top" Width="100" FontSize="22" TextAlignment="Right"/>
    <ComboBox x:Name="OperatorComboBox" HorizontalAlignment="Left" Margin="115,10,0,0" VerticalAlignment="Top" Width="118" Height="36" FontSize="24">
      <sys:String>+</sys:String>
      <sys:String>-</sys:String>
      <sys:String>*</sys:String>
      <sys:String>/</sys:String>
    </ComboBox>
    <TextBox x:Name="Number2TextBox" HorizontalAlignment="Left" Height="36" Margin="238,10,0,0" TextWrapping="Wrap" Text="10" VerticalAlignment="Top" Width="100" FontSize="24" TextAlignment="Right"/>
    <Button x:Name="CalculateButton" Content="=" HorizontalAlignment="Left" Margin="343,10,0,0" VerticalAlignment="Top" Width="75" Height="36" FontSize="24" Click="CalculateButton_Click"/>
    <TextBox x:Name="AnswerTextBox" HorizontalAlignment="Left" Height="36" Margin="423,10,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="100" FontSize="24" TextAlignment="Right"/>

  </Grid>
</Window>
